{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reservation Confirmed</h1>
    <p>Hello {{ username }},</p>
    <p>Your reservation with ID <strong>{{ reservationId }}</strong> has been confirmed.</p>
    <p>Details:</p>
    <ul>
        <li>Number of Tickets: {{ ticketCount }}</li>
        <li>Passenger Names:</li>
        <ul>
            {% for name in passengerNames %}
                <li>{{ name }}</li>
            {% endfor %}
        </ul>
    </ul>
    <p>Thank you for choosing our service!</p>
{% endblock %}